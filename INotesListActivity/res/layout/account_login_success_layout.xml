<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?g_main_bg" >

    <TextView
        android:id="@+id/account_success_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dip"
        android:gravity="center"
        android:textColor="?gtlea_all_text"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dip"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/ui_login_success_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?gtlea_all_text"/>

    <LinearLayout
        android:id="@+id/snoozer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?theme_bottombar_bg"
        android:orientation="vertical"
         >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="?theme_bottombar_top_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureWithLargestChild="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/done_button"
                style="?g_buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:maxLines="2"
                android:text="@string/btn_done" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>